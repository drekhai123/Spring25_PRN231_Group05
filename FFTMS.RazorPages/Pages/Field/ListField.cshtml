@page
@model FFTMS.RazorPages.Pages.Field.ListFieldModel
@{
    ViewData["Title"] = "List Fields";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Fields</h3>
            <a asp-page="./CreateField" class="btn btn-success">Create New Field</a>
        </div>
        <div class="card-body">
            @if (Model.Fields?.Any() ?? false)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Length</th>
                                <th>Width</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var field in Model.Fields)
                            {
                                <tr>
                                    <td>@field.FieldName</td>
                                    <td>@field.Length</td>
                                    <td>@field.Width</td>
                                    <td>@field.Description</td>
                                    <td>@(field.Status ? "Active" : "Inactive")</td>
                                    <td>
                                        <a asp-page="./DetailsField" asp-route-id="@field.FieldId" class="btn btn-info btn-sm">Details</a>
                                        <a asp-page="./UpdateField" asp-route-id="@field.FieldId" class="btn btn-primary btn-sm">Edit</a>
                                        <a asp-page="./DeleteField" asp-route-id="@field.FieldId" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-center">No fields found.</p>
            }
        </div>
    </div>
</div> 