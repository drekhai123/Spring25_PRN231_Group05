@page
@model FFTMS.RazorPages.Pages.ProductField.CreateProductFieldModel
@{
    ViewData["Title"] = "Create Product Field";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Create New Product Field</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ProductField.ProductId" class="form-label">Product</label>
                        <select asp-for="ProductField.ProductId" asp-items="Model.Products" class="form-select" required>
                            <option value="">Select a product</option>
                        </select>
                        <span asp-validation-for="ProductField.ProductId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ProductField.FieldId" class="form-label">Field</label>
                        <select asp-for="ProductField.FieldId" asp-items="Model.Fields" class="form-select" required>
                            <option value="">Select a field</option>
                        </select>
                        <span asp-validation-for="ProductField.FieldId" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ProductField.Productivity" class="form-label">Productivity</label>
                        <input asp-for="ProductField.Productivity" class="form-control" type="number" step="0.01" required />
                        <span asp-validation-for="ProductField.Productivity" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ProductField.ProductivityUnit" class="form-label">Productivity Unit</label>
                        <input asp-for="ProductField.ProductivityUnit" class="form-control" required />
                        <span asp-validation-for="ProductField.ProductivityUnit" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ProductField.StartDate" class="form-label">Start Date</label>
                        <input asp-for="ProductField.StartDate" class="form-control" type="date" required />
                        <span asp-validation-for="ProductField.StartDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ProductField.EndDate" class="form-label">End Date</label>
                        <input asp-for="ProductField.EndDate" class="form-control" type="date" required />
                        <span asp-validation-for="ProductField.EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input asp-for="ProductField.Status" class="form-check-input" type="checkbox" />
                        <label asp-for="ProductField.Status" class="form-check-label">Active</label>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="./ListProductField" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 