@page
@model FFTMS.RazorPages.Pages.Tasks.IndexModel
@{
    ViewData["Title"] = "Tasks";
    Layout = "_Layout";
}

<div class="main-container">
    <div class="pd-ltr-20">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="font-weight-bold mb-0">Tasks Management</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb bg-transparent p-0">
                            <li class="breadcrumb-item"><a href="/" class="text-muted">Dashboard</a></li>
                            <li class="breadcrumb-item active text-primary">Tasks</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-page="./Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add Task
                    </a>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row align-items-center mb-3">
                    <div class="col-sm-12 col-md-6 d-flex align-items-center">
                        <label class="me-2 mb-0">Show</label>
                        <select class="form-select form-select-sm w-auto">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                        </select>
                        <label class="ms-2 mb-0">entries</label>
                    </div>
                    <div class="col-sm-12 col-md-6 mt-3 mt-md-0">
                        <form method="get" class="d-flex justify-content-md-end">
                            <div class="input-group">
                                <input type="search" name="SearchTerm" value="@Model.SearchTerm" class="form-control"
                                    placeholder="Search tasks...">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.SearchTerm))
                            {
                                <a asp-page="./Index" class="btn btn-outline-secondary ms-2">
                                    <i class="fas fa-redo-alt"></i>
                                </a>
                            }
                        </form>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Job Title</th>
                                <th>Description</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Active Status</th>
                                <th>Task Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Tasks)
                            {
                                <tr>
                                    <td class="fw-bold">@item.JobTitle</td>
                                    <td>@item.Description</td>
                                    <td>@item.StartDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@item.EndDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @{
                                            var currentDate = DateTime.Now;
                                            var isOverdue = item.EndDate < currentDate && item.TaskStatus !=
                                            FlowerFarmTaskManagementSystem.BusinessObject.Models.TaskProgressStatus.COMPLETED;
                                        }
                                        <span class="badge @(item.Status ? "bg-success" : "bg-danger")">
                                            @(item.Status ? "Active" : "Inactive")
                                        </span>
                                        @if (isOverdue)
                                        {
                                            <span class="badge bg-danger ms-1">Overdue</span>
                                        }
                                </td>
                                <td>
                                    <span
                                        class="badge @(item.TaskStatus == FlowerFarmTaskManagementSystem.BusinessObject.Models.TaskProgressStatus.INPROGRESS ? "bg-warning" : "bg-success")">
                                        @(item.TaskStatus ==
                                                                                FlowerFarmTaskManagementSystem.BusinessObject.Models.TaskProgressStatus.INPROGRESS
                                                                                ? "In Progress" : "Completed")
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a asp-page="./Details" asp-route-id="@item.TaskWorkId"
                                        class="btn btn-sm btn-info me-1">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (item.TaskStatus !=
                                                                        FlowerFarmTaskManagementSystem.BusinessObject.Models.TaskProgressStatus.COMPLETED)
                                        {
                                            <a asp-page="./Edit" asp-route-id="@item.TaskWorkId"
                                                class="btn btn-sm btn-warning me-1">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        <a asp-page="./Delete" asp-route-id="@item.TaskWorkId"
                                            class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="row mt-3">
                    <div class="col-sm-12 col-md-5">
                        <p class="mb-0">Showing 1 - @Model.Tasks.Count() of @Model.Tasks.Count() entries</p>
                    </div>
                    <div class="col-sm-12 col-md-7">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-end mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    .badge {
        font-weight: 500;
        padding: 0.5em 0.75em;
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                autoWidth: false,
                searching: false,
                lengthChange: false,
                paging: false,
                info: false,
                ordering: true,
                scrollX: true
            });
        });
    </script>
}
