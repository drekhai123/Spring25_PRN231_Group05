@page "{id:guid}"
@model FFTMS.RazorPages.Pages.Tasks.DetailsModel
@{
    ViewData["Title"] = "Task Details";
    Layout = "_Layout";
}

<div class="main-container">
    <div class="pd-ltr-20">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Task Details</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <li class="breadcrumb-item"><a asp-page="./Index">Tasks</a></li>
                                <li class="breadcrumb-item active">Details</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @Model.ErrorMessage
                </div>
            }

            <div class="pd-20 card-box mb-30">
                <div class="details-view">
                    <dl class="row">
                        <dt class="col-sm-3">Task ID</dt>
                        <dd class="col-sm-9">@Model.Task.TaskWorkId</dd>

                        <dt class="col-sm-3">Job Title</dt>
                        <dd class="col-sm-9">@Model.Task.JobTitle</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Task.Description</dd>

                        <dt class="col-sm-3">Assigned By</dt>
                        <dd class="col-sm-9">@Model.Task.AssignedBy</dd>

                        <dt class="col-sm-3">Start Date</dt>
                        <dd class="col-sm-9">@Model.Task.StartDate.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-3">End Date</dt>
                        <dd class="col-sm-9">@Model.Task.EndDate.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.Task.Status ? "bg-success" : "bg-danger")">
                                @(Model.Task.Status ? "Active" : "Inactive")
                            </span>
                        </dd>

                        <dt class="col-sm-3">Created Date</dt>
                        <dd class="col-sm-9">@Model.Task.CreateDate.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-3">Updated Date</dt>
                        <dd class="col-sm-9">
                            @(Model.Task.UpdateDate != default(DateTime) ?
                                                        Model.Task.UpdateDate.ToString("dd/MM/yyyy HH:mm") : "Not updated")
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Task.ImageUrl))
                        {
                            <dt class="col-sm-3">Image</dt>
                            <dd class="col-sm-9">
                                <img src="@Model.Task.ImageUrl" alt="Task Image" style="max-width: 300px;" />
                            </dd>
                        }

                        <dt class="col-sm-3">Product Field Information</dt>
                        <dd class="col-sm-9">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Product Field ID</dt>
                                <dd class="col-sm-8">@Model.Task.ProductField.ProductFieldId</dd>

                                <dt class="col-sm-4">Start Date</dt>
                                <dd class="col-sm-8">@Model.Task.ProductField.StartDate.ToString("dd/MM/yyyy")</dd>

                                <dt class="col-sm-4">End Date</dt>
                                <dd class="col-sm-8">@Model.Task.ProductField.EndDate.ToString("dd/MM/yyyy")</dd>

                                <dt class="col-sm-4">Productivity</dt>
                                <dd class="col-sm-8">@Model.Task.ProductField.Productivity
                                    @Model.Task.ProductField.ProductivityUnit</dd>

                                <dt class="col-sm-4">Product Name</dt>
                                <dd class="col-sm-8">@Model.Task.ProductField.Product.ProductName</dd>

                                <dt class="col-sm-4">Category</dt>
                                <dd class="col-sm-8">@Model.Task.ProductField.Product.Category.CategoryName</dd>
                            </dl>
                        </dd>

                        <dt class="col-sm-3">Staff Assignments</dt>
                        <dd class="col-sm-9">
                            @if (Model.Task.UserTasks != null && Model.Task.UserTasks.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Staff Name</th>
                                                <th>Description</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var userTask in Model.Task.UserTasks)
                                            {
                                                <tr>
                                                    <td>@userTask.User.UserName</td>
                                                    <td>@userTask.UserTaskDescription</td>
                                                    <td>
                                                        <span class="badge @(userTask.Status ? "bg-success" : "bg-danger")">
                                                            @(userTask.Status ? "Active" : "Inactive")
                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p>No staff assignments</p>
                            }
                        </dd>
                    </dl>

                    <div class="form-group mt-3">
                        <a asp-page="./Edit" asp-route-id="@Model.Task.TaskWorkId" class="btn btn-primary">Edit</a>
                        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .details-view dt {
        font-weight: 500;
    }

    .details-view dd {
        margin-bottom: 1rem;
    }

    .table {
        margin-bottom: 0;
    }

    .badge {
        padding: 0.4em 0.8em;
        font-size: 12px;
    }
</style>