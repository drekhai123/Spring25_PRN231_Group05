@page
@model FFTMS.RazorPages.Pages.Tasks.DeleteModel
@{
    ViewData["Title"] = "Xóa công việc";
    Layout = "_Layout";
}

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Xóa công việc</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-page="/Index">Trang chủ</a></li>
                                <li class="breadcrumb-item"><a asp-page="/Tasks/Index">Danh sách công việc</a></li>
                                <li class="breadcrumb-item active">Xóa</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @Model.ErrorMessage
                </div>
            }

            <div class="pd-20 card-box mb-30">
                <h3>Bạn có chắc chắn muốn xóa công việc này?</h3>
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">Tiêu đề công việc</dt>
                        <dd class="col-sm-10">@Model.Task.JobTitle</dd>
                        <dt class="col-sm-2">Mô tả</dt>
                        <dd class="col-sm-10">@Model.Task.Description</dd>
                        <dt class="col-sm-2">Phân công cho</dt>
                        <dd class="col-sm-10">@Model.Task.AssignedTo</dd>
                        <dt class="col-sm-2">Trạng thái</dt>
                        <dd class="col-sm-10">
                            <span class="badge @(Model.Task.Status ? "bg-success" : "bg-danger")">
                                @(Model.Task.Status ? "Hoạt động" : "Không hoạt động")
                            </span>
                        </dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Task.TaskWorkId" />
                        <input type="submit" value="Xóa" class="btn btn-danger" />
                        <a asp-page="./Index" class="btn btn-secondary">Quay lại danh sách</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>