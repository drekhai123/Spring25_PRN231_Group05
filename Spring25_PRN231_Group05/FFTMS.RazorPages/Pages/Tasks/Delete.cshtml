@page
@model FFTMS.RazorPages.Pages.Tasks.DeleteModel
@{
    ViewData["Title"] = "Delete Task";
    Layout = "_Layout";
}

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Delete Task</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                                <li class="breadcrumb-item"><a asp-page="/Tasks/Index">Tasks</a></li>
                                <li class="breadcrumb-item active">Delete</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @Model.ErrorMessage
                </div>
            }

            <div class="pd-20 card-box mb-30">
                <h3>Are you sure you want to delete this task?</h3>
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">Job Title</dt>
                        <dd class="col-sm-10">@Model.Task.JobTitle</dd>
                        <dt class="col-sm-2">Description</dt>
                        <dd class="col-sm-10">@Model.Task.Description</dd>
                        <dt class="col-sm-2">Assigned To</dt>
                        <dd class="col-sm-10">@Model.Task.AssignedTo</dd>
                        <dt class="col-sm-2">Status</dt>
                        <dd class="col-sm-10">
                            <span class="badge @(Model.Task.Status ? "bg-success" : "bg-danger")">
                                @(Model.Task.Status ? "Active" : "Inactive")
                            </span>
                        </dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Task.TaskWorkId" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>