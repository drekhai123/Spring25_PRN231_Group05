@page "{id:guid}"
@model FFTMS.RazorPages.Pages.Tasks.DeleteModel
@{
    ViewData["Title"] = "Xóa công việc";
    Layout = "_Layout";
}

<div class="main-container">
    <div class="pd-ltr-20">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Xóa công việc</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                                <li class="breadcrumb-item"><a asp-page="./Index">Công việc</a></li>
                                <li class="breadcrumb-item active">Xóa</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="pd-20 card-box mb-30">
                <div class="clearfix mb-20">
                    <div class="pull-left">
                        <h4 class="text-danger h4">Bạn có chắc chắn muốn xóa công việc này?</h4>
                        <p class="mb-30 text-muted">Hành động này không thể hoàn tác.</p>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th>Tên công việc</th>
                                <td>@Model.Task.JobTitle</td>
                            </tr>
                            <tr>
                                <th>Mô tả</th>
                                <td>@Model.Task.Description</td>
                            </tr>
                            <tr>
                                <th>Trạng thái</th>
                                <td>
                                    <span
                                        class="badge text-white @(Convert.ToInt32(Model.Task.Status) == 1 ? "bg-success" : "bg-danger")">
                                        @(Convert.ToInt32(Model.Task.Status) == 1 ? "Hoạt động" : "Không hoạt động")
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th>Tiến độ</th>
                                <td>
                                    <span
                                        class="badge text-white @(Model.Task.TaskStatus == FlowerFarmTaskManagementSystem.BusinessObject.Models.TaskProgressStatus.INPROGRESS ? "bg-warning" : "bg-success")">
                                        @(Model.Task.TaskStatus ==
                                                                                FlowerFarmTaskManagementSystem.BusinessObject.Models.TaskProgressStatus.INPROGRESS
                                                                                ? "Đang thực hiện" : "Hoàn thành")
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th>Ngày bắt đầu</th>
                                <td>@Model.Task.StartDate.ToString("dd/MM/yyyy HH:mm")</td>
                            </tr>
                            <tr>
                                <th>Ngày kết thúc</th>
                                <td>@Model.Task.EndDate.ToString("dd/MM/yyyy HH:mm")</td>
                            </tr>
                            <tr>
                                <th>Ngày tạo</th>
                                <td>@Model.Task.CreateDate.ToString("dd/MM/yyyy HH:mm")</td>
                            </tr>
                            @if (Model.Task.UpdateDate != default(DateTime))
                            {
                                <tr>
                                    <th>Cập nhật lần cuối</th>
                                    <td>@Model.Task.UpdateDate.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <form method="post" class="mt-4">
                    <input type="hidden" asp-for="Task.TaskWorkId" />
                    <div class="row">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-danger">
                                <i class="icon-copy dw dw-delete-3"></i> Xác nhận xóa
                            </button>
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="icon-copy dw dw-list"></i> Quay lại danh sách
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .badge {
        padding: 0.4em 0.8em;
        font-size: 12px;
        color: white !important;
    }
</style>