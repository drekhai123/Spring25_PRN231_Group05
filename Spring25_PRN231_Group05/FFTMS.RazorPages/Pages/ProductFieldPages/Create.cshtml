@page
@model FFTMS.RazorPages.Pages.ProductFieldPages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product Field</h4>
<hr />
<div class="row" style="margin-left: 250px;">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="ProductField.Productivity" class="form-label control-label"></label>
                <input asp-for="ProductField.Productivity" class="form-control" type="number" step="0.1" required />
                <span asp-validation-for="ProductField.Productivity" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProductField.ProductivityUnit" class="form-label control-label"></label>
                <input asp-for="ProductField.ProductivityUnit" class="form-control" required />
                <span asp-validation-for="ProductField.ProductivityUnit" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProductField.StartDate" class="form-label control-label"></label>
                <input asp-for="ProductField.StartDate" class="form-control" type="datetime-local" required />
                <span asp-validation-for="ProductField.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProductField.EndDate" class="form-label control-label"></label>
                <input asp-for="ProductField.EndDate" class="form-control" type="datetime-local" required />
                <span asp-validation-for="ProductField.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProductField.CreateDate" class="form-label control-label"></label>
                <input asp-for="ProductField.CreateDate" class="form-control" type="datetime-local" readonly />
                <span asp-validation-for="ProductField.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProductField.UpdateDate" class="form-label control-label"></label>
                <input asp-for="ProductField.UpdateDate" class="form-control" type="datetime-local" readonly />
                <span asp-validation-for="ProductField.UpdateDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ProductField.Status" /> @Html.DisplayNameFor(model => model.ProductField.Status)
                </label>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProductField.ProductId" class="form-label control-label"></label>
                <select asp-for="ProductField.ProductId" class="form-control" asp-items="ViewBag.ProductId as SelectList">
                    <option value="">-- Select Product --</option>  
                </select>
                <span asp-validation-for="ProductField.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProductField.FieldId" class="form-label control-label"></label>
                <select asp-for="ProductField.FieldId" class="form-control" asp-items="ViewBag.FieldId as SelectList">
                    <option value="">-- Select Field --</option>
                </select>
                <span asp-validation-for="ProductField.FieldId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
    .row {
        margin-left: 250px;
    }
</style>