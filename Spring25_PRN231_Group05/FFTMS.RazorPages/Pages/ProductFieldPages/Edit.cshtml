@page
@model FFTMS.RazorPages.Pages.ProductFieldPages.EditModel

@{
    ViewData["Title"] = "Edit Product Field";
    Layout = "_Layout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Edit Product Field</h1>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-edit me-1"></i>
            Edit Product Field Information
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @Model.ErrorMessage
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form method="post">
                <input type="hidden" asp-for="ProductField.ProductFieldId" />
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <i class="fas fa-info-circle me-1"></i>
                                Product Field Information
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="ProductField.StartDate" class="form-label">Start Date</label>
                                    <input asp-for="ProductField.StartDate" class="form-control" type="date" />
                                    <span asp-validation-for="ProductField.StartDate" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="ProductField.EndDate" class="form-label">End Date</label>
                                    <input asp-for="ProductField.EndDate" class="form-control" type="date" />
                                    <span asp-validation-for="ProductField.EndDate" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="ProductField.ProductFieldStatus" class="form-label">Status</label>
                                    <select asp-for="ProductField.ProductFieldStatus" class="form-select" asp-items="Html.GetEnumSelectList<FlowerFarmTaskManagementSystem.BusinessObject.Models.ProductFieldStatus>()">
                                    </select>
                                    <span asp-validation-for="ProductField.ProductFieldStatus" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="ProductField.Productivity" class="form-label">Productivity</label>
                                    <input asp-for="ProductField.Productivity" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="ProductField.Productivity" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="ProductField.ProductivityUnit" class="form-label">Productivity Unit</label>
                                    <input asp-for="ProductField.ProductivityUnit" class="form-control" />
                                    <span asp-validation-for="ProductField.ProductivityUnit" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-header bg-warning text-dark">
                                <i class="fas fa-seedling me-1"></i>
                                Product Information
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="form-label">Product</label>
                                    <select asp-for="ProductField.Product.ProductId" class="form-select" asp-items="ViewBag.ProductId">
                                        <option value="">-- Select Product --</option>
                                    </select>
                                    <span asp-validation-for="ProductField.Product.ProductId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header bg-success text-white">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                Field Information
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="form-label">Field</label>
                                    <select asp-for="ProductField.Field.FieldId" class="form-select" asp-items="ViewBag.FieldId">
                                        <option value="">-- Select Field --</option>
                                    </select>
                                    <span asp-validation-for="ProductField.Field.FieldId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Save Changes
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary ms-2">
                        <i class="fas fa-times me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .main-container {
        margin-left: 250px;
    }

    .card {
        border: none;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
    }

    .card-header {
        font-weight: 500;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-label {
        margin-bottom: 0.5rem;
    }

    .form-select, .form-control {
        border-radius: 0.35rem;
    }

    .btn {
        border-radius: 0.35rem;
    }
</style>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelector("form").addEventListener("submit", function (e) {
            console.log("Form is submitting...");
        });
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}