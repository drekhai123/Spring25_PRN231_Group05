@page
@model FFTMS.RazorPages.Pages.ProductFieldPages.EditModel

@{
    ViewData["Title"] = "Edit Product Field";
    Layout = "_Layout";
}

<div class="main-container">
    <div class="pd-ltr-20">
        <div class="card shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
                <h3 class="mb-0"><i class="fas fa-edit me-2"></i>Edit Product Field</h3>
                <a asp-page="./Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>

            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="ProductField.ProductFieldId" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ProductField.Productivity" class="control-label fw-bold"></label>
                                <input asp-for="ProductField.Productivity" class="form-control" />
                                <span asp-validation-for="ProductField.Productivity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ProductField.ProductivityUnit" class="control-label fw-bold"></label>
                                <input asp-for="ProductField.ProductivityUnit" class="form-control" />
                                <span asp-validation-for="ProductField.ProductivityUnit" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ProductField.StartDate" class="control-label fw-bold"></label>
                                <input asp-for="ProductField.StartDate" class="form-control" type="date" />
                                <span asp-validation-for="ProductField.StartDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ProductField.EndDate" class="control-label fw-bold"></label>
                                <input asp-for="ProductField.EndDate" class="form-control" type="date" />
                                <span asp-validation-for="ProductField.EndDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ProductField.CreateDate" class="control-label fw-bold"></label>
                                <input asp-for="ProductField.CreateDate" class="form-control" type="datetime-local" readonly />
                                <span asp-validation-for="ProductField.CreateDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ProductField.UpdateDate" class="control-label fw-bold"></label>
                                <input asp-for="ProductField.UpdateDate" class="form-control" type="datetime-local" readonly />
                                <span asp-validation-for="ProductField.UpdateDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ProductField.ProductId" class="control-label fw-bold"></label>
                                <select asp-for="ProductField.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                                <span asp-validation-for="ProductField.ProductId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ProductField.FieldId" class="control-label fw-bold"></label>
                                <select asp-for="ProductField.FieldId" class="form-control" asp-items="ViewBag.FieldId"></select>
                                <span asp-validation-for="ProductField.FieldId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                        <div class="form-group mb-3">
                            <label asp-for="ProductField.ProductFieldStatus" class="form-label">Status</label>
                            <input asp-for="ProductField.ProductFieldStatus" class="form-control" />
                            <span asp-validation-for="ProductField.ProductFieldStatus" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ProductField.ProductFieldId" class="form-label">Product</label>
                            <select asp-for="ProductField.ProductFieldId" class="form-control" asp-items="ViewBag.ProductId as SelectList">
                                <option value="">-- Select Product --</option>
                            </select>
                            <span asp-validation-for="ProductField.ProductFieldId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Field Name</label>
                            <input class="form-control" value="@(Model.ProductField.Field?.FieldName ?? "N/A")" readonly />
                        </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i> Save
                        </button>
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .main-container {
        margin-left: 250px; /* Đảm bảo căn chỉnh với sidebar */
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}