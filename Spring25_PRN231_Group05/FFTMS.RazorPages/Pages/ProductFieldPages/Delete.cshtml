@page
@model FFTMS.RazorPages.Pages.ProductFieldPages.DeleteModel
@{
    ViewData["Title"] = "Delete Product Field";
    Layout = "_Layout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Delete Product Field</h1>
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.ProductField == null)
    {
        <div class="alert alert-warning" role="alert">
            Product Field not found.
        </div>
    }
    else
    {
        <div class="card mb-4">
            <div class="card-header bg-danger text-white">
                <i class="fas fa-exclamation-triangle me-1"></i>
                Confirm Deletion
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h5 class="alert-heading">Warning!</h5>
                    <p>Are you sure you want to delete this Product Field? This action cannot be undone.</p>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <i class="fas fa-info-circle me-1"></i>
                                Product Field Information
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-4">Status</dt>
                                    <dd class="col-sm-8">
                                        <span class="badge @(Model.ProductField.ProductFieldStatus == FlowerFarmTaskManagementSystem.BusinessObject.Models.ProductFieldStatus.GROWING ? "bg-success" : 
                                                          Model.ProductField.ProductFieldStatus == FlowerFarmTaskManagementSystem.BusinessObject.Models.ProductFieldStatus.READYTOHARVEST ? "bg-warning" : "bg-secondary")">
                                            @Model.ProductField.ProductFieldStatus
                                        </span>
                                    </dd>

                                    <dt class="col-sm-4">Start Date</dt>
                                    <dd class="col-sm-8">@Model.ProductField.StartDate.ToString("dd/MM/yyyy")</dd>

                                    <dt class="col-sm-4">End Date</dt>
                                    <dd class="col-sm-8">@Model.ProductField.EndDate.ToString("dd/MM/yyyy")</dd>

                                    <dt class="col-sm-4">Productivity</dt>
                                    <dd class="col-sm-8">
                                        @(Model.ProductField.Productivity > 0 
                                            ? $"{Model.ProductField.Productivity} {Model.ProductField.ProductivityUnit}"
                                            : "Not available")
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-header bg-warning text-dark">
                                <i class="fas fa-seedling me-1"></i>
                                Product Information
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-4">Product</dt>
                                    <dd class="col-sm-8">@(Model.ProductField.Product?.ProductName ?? "N/A")</dd>

                                    <dt class="col-sm-4">Category</dt>
                                    <dd class="col-sm-8">@(Model.ProductField.Product?.Category?.CategoryName ?? "N/A")</dd>
                                </dl>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header bg-success text-white">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                Field Information
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-4">Field</dt>
                                    <dd class="col-sm-8">@(Model.ProductField.Field?.FieldName ?? "N/A")</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <form method="post">
                        <input type="hidden" asp-for="ProductField.ProductFieldId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i> Delete
                        </button>
                        <a asp-page="./Index" class="btn btn-secondary ms-2">
                            <i class="fas fa-times me-1"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card {
        border: none;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
    }

    .card-header {
        font-weight: 500;
    }

    .btn {
        border-radius: 0.35rem;
    }

    .alert {
        border-radius: 0.35rem;
    }
</style>
