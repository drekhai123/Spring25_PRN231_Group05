@page
@model FFTMS.RazorPages.Pages.ProductFieldPages.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Delete Product Field</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                                <li class="breadcrumb-item"><a asp-page="/ProductFieldPages/Index">Product Fields</a></li>
                                <li class="breadcrumb-item active">Delete</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            

            <div class="pd-20 card-box mb-30">
                <h3>Are you sure you want to delete this product field?</h3>
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">Productivity</dt>
                        <dd class="col-sm-10">@Model.ProductField.Productivity</dd>
                        <dt class="col-sm-2">Productivity Unit</dt>
                        <dd class="col-sm-10">@Model.ProductField.ProductivityUnit</dd>
                        <dt class="col-sm-2">Start Date</dt>
                        <dd class="col-sm-10">@Model.ProductField.StartDate</dd>
                        <dt class="col-sm-2">End Date</dt>
                        <dd class="col-sm-10">@Model.ProductField.EndDate</dd>
                        <dt class="col-sm-2">Create Date</dt>
                        <dd class="col-sm-10">@Model.ProductField.CreateDate</dd>
                        <dt class="col-sm-2">Update Date</dt>
                        <dd class="col-sm-10">@Model.ProductField.UpdateDate</dd>
                        <dt class="col-sm-2">Status</dt>
                        <dd class="col-sm-10">
                            <span class="badge @(Model.ProductField.Status == "Active" ? "badge-success" : "badge-danger")">
                                @(Model.ProductField.Status == "Active" ? "Active" : "Inactive")
                            </span>
                        </dd>
                        <dt class="col-sm-2">Product</dt>
                        <dd class="col-sm-10">@Model.ProductField.Product.ProductName</dd>
                        <dt class="col-sm-2">Field</dt>
                        <dd class="col-sm-10">@Model.ProductField.Field.FieldName</dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="ProductField.ProductFieldId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .main-container {
            margin-left: 250px;
        }

        .title {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .breadcrumb {
            background: none;
            padding: 0;
            margin-bottom: 20px;
        }

        .breadcrumb-item a {
            color: #007bff;
        }

        .breadcrumb-item.active {
            color: #6c757d;
        }

        .alert {
            margin-bottom: 20px;
        }

        .card-box {
            padding: 20px;
            margin-bottom: 30px;
            border: 1px solid #f1f1f1;
            border-radius: 5px;
            background-color: #ffffff;
        }

        .btn-secondary {
            margin-left: 10px;
        }
    </style>
}
