@page
@model FFTMS.RazorPages.Pages.ProductFieldPages.IndexModel

@{
    ViewData["Title"] = "Product Fields";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="fas fa-list me-2"></i>Product Fields</h3>
            <a asp-page="Create" class="btn btn-light fw-bold">
                <i class="fas fa-plus me-1"></i> Create New
            </a>
        </div>

        <div class="card-body">
            @if (Model.ProductField == null || !Model.ProductField.Any())
            {
                <div class="alert alert-warning text-center" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i> No Product Fields found.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Product</th>
                                <th>Field</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Created</th>
                                <th>Updated</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ProductField)
                            {
                                <tr>
                                    <td>@(item.Product?.ProductName ?? "N/A")</td>
                                    <td>@(item.Field?.FieldName ?? "N/A")</td>
                                    <td>@item.StartDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>@item.EndDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>@item.CreateDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>@item.UpdateDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>
                                        <span class="badge @(item.ProductFieldStatus.ToString() == "in progress" ? "bg-warning text-dark" : "bg-secondary")">
                                            @item.ProductFieldStatus
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-page="./Edit" asp-route-id="@item.ProductFieldId" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit me-1"></i> Edit
                                            </a>
                                            @if(item.ProductFieldStatus == FlowerFarmTaskManagementSystem.BusinessObject.Models.ProductFieldStatus.READYTOHARVEST){
                                                <a asp-page="./UpdateProductivity" asp-route-id="@item.ProductFieldId" class="btn btn-sm btn-outline-warning">
                                                    <i class="fas fa-tasks me-1"></i> Productivity
                                                </a>
                                            }
                                            <a asp-page="./Details" asp-route-id="@item.ProductFieldId" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye me-1"></i> Details
                                            </a>
                                            <a asp-page="./Delete" asp-route-id="@item.ProductFieldId" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash me-1"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .btn-group .btn {
        transition: all 0.3s ease-in-out;
    }

        .btn-group .btn:hover {
            filter: brightness(1.2);
        }

    .badge {
        font-size: 0.85rem;
        padding: 0.4em 0.75em;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>
