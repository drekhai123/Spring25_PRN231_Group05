@page
@model FFTMS.RazorPages.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
    Layout = "_Layout";
}

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Users Management</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item active">Users</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-md-6 col-sm-12 text-right">
                        <a asp-page="Create" class="btn btn-primary">
                            <i class="icon-copy dw dw-add"></i> Create New User
                        </a>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                    <div class="alert alert-danger">
                        @Model.ErrorMessage
                    </div>
            }

            <div class="card-box mb-30">
                <div class="pd-20">
                    <h4 class="text-blue h4">List of Users</h4>
                </div>
                <div class="pb-20">
                    <table class="table hover nowrap">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Users)
                            {
                                    <tr>
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>
                                        <td>@(item.Phone ?? "N/A")</td>
                                        <td>
                                            <span class="badge badge-pill @(item.Role == "Admin" ? "badge-danger" : "badge-primary")">
                                                @item.Role
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge badge-pill @(item.IsActive ? "badge-success" : "badge-danger")">
                                                @(item.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-page="./Edit" asp-route-id="@item.UserId" class="btn btn-info btn-sm">Edit</a>
                                            <a asp-page="./Details" asp-route-id="@item.UserId" class="btn btn-primary btn-sm">Details</a>
                                            <a asp-page="./Delete" asp-route-id="@item.UserId" class="btn btn-danger btn-sm">Delete</a>
                                        </td>
                                    </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>