@page
@model FFTMS.RazorPages.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete User";
    Layout = "_Layout";
}

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Delete User</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                                <li class="breadcrumb-item"><a asp-page="/Users/Index">Users</a></li>
                                <li class="breadcrumb-item active">Delete</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            <div class="pd-20 card-box mb-30">
                <h3>Are you sure you want to delete this user?</h3>
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">Username</dt>
                        <dd class="col-sm-10">@Model.User.UserName</dd>
                        <dt class="col-sm-2">Email</dt>
                        <dd class="col-sm-10">@Model.User.Email</dd>
                        <dt class="col-sm-2">Phone</dt>
                        <dd class="col-sm-10">@Model.User.Phone</dd>
                        <dt class="col-sm-2">Role</dt>
                        <dd class="col-sm-10">@Model.User.Role</dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="User.UserId" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>