@page
@model FFTMS.RazorPages.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Deactivate Manager";
    Layout = "_Layout";
}

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Deactivate Manager</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                                <li class="breadcrumb-item"><a asp-page="/Users/Index">Users</a></li>
                                <li class="breadcrumb-item active">Deactivate</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @Model.ErrorMessage
                </div>
            }

            <div class="pd-20 card-box mb-30">
                <div class="alert alert-warning">
                    <i class="icon-copy fa fa-exclamation-triangle mr-2"></i>
                    <strong>Warning:</strong> Deactivating this manager will prevent them from logging in to the system.
                    This action can be reversed later by an administrator.
                </div>

                <h4 class="mb-4">Are you sure you want to deactivate this manager?</h4>
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">Username</dt>
                        <dd class="col-sm-10">@Model.User.UserName</dd>
                        <dt class="col-sm-2">Email</dt>
                        <dd class="col-sm-10">@Model.User.Email</dd>
                        <dt class="col-sm-2">Phone</dt>
                        <dd class="col-sm-10">@(Model.User.Phone ?? "N/A")</dd>
                        <dt class="col-sm-2">Role</dt>
                        <dd class="col-sm-10">
                            <span class="badge @(Model.User.Role == "Manager" ? "bg-primary" : "bg-info")">
                                @Model.User.Role
                            </span>
                        </dd>
                        <dt class="col-sm-2">Status</dt>
                        <dd class="col-sm-10">
                            <span class="badge @(Model.User.IsActive ? "bg-success" : "bg-danger")">
                                @(Model.User.IsActive ? "Active" : "Inactive")
                            </span>
                        </dd>
                    </dl>

                    <form method="post" class="mt-4">
                        <input type="hidden" asp-for="User.UserId" />
                        <div class="d-flex">
                            <button type="submit" class="btn btn-danger mr-2">
                                <i class="icon-copy fa fa-user-times mr-2"></i> Deactivate Manager
                            </button>
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="icon-copy fa fa-arrow-left mr-2"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>