@page "{id:guid}"
@model FFTMS.RazorPages.Pages.ProductField.UpdateProductFieldModel
@{
    ViewData["Title"] = "Update Product Field";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Update Product Field</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="ProductField.ProductFieldId" />
                <input type="hidden" asp-for="ProductField.CreatedDate" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="ProductField.ProductId" class="form-label">Product</label>
                        <select asp-for="ProductField.ProductId" asp-items="Model.Products" class="form-select">
                            <option value="">Select a product</option>
                        </select>
                        <span asp-validation-for="ProductField.ProductId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ProductField.FieldId" class="form-label">Field</label>
                        <select asp-for="ProductField.FieldId" asp-items="Model.Fields" class="form-select">
                            <option value="">Select a field</option>
                        </select>
                        <span asp-validation-for="ProductField.FieldId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ProductField.Productivity" class="form-label">Productivity</label>
                        <input asp-for="ProductField.Productivity" class="form-control" />
                        <span asp-validation-for="ProductField.Productivity" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ProductField.StartDate" class="form-label">Start Date</label>
                        <input asp-for="ProductField.StartDate" type="date" class="form-control" />
                        <span asp-validation-for="ProductField.StartDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ProductField.EndDate" class="form-label">End Date</label>
                        <input asp-for="ProductField.EndDate" type="date" class="form-control" />
                        <span asp-validation-for="ProductField.EndDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-check mt-4">
                            <input asp-for="ProductField.Status" class="form-check-input" />
                            <label asp-for="ProductField.Status" class="form-check-label">Active</label>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-page="./ListProductField" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            // Add date validation
            $('#ProductField_StartDate').change(function () {
                var startDate = $(this).val();
                $('#ProductField_EndDate').attr('min', startDate);
            });

            $('#ProductField_EndDate').change(function () {
                var endDate = $(this).val();
                $('#ProductField_StartDate').attr('max', endDate);
            });
        });
    </script>
} 