@page "{id:guid}"
@model FFTMS.RazorPages.Pages.ProductField.DetailsProductFieldModel
@{
    ViewData["Title"] = "Product Field Details";
    Layout = "_Layout";
}

<div class="main-container">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Product Field Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Product</dt>
                <dd class="col-sm-9">@Model.ProductField.Product.ProductName</dd>

                <dt class="col-sm-3">Field</dt>
                <dd class="col-sm-9">@Model.ProductField.Field.FieldName</dd>

                <dt class="col-sm-3">Productivity</dt>
                <dd class="col-sm-9">@Model.ProductField.Productivity</dd>

                <dt class="col-sm-3">Start Date</dt>
                <dd class="col-sm-9">@Model.ProductField.StartDate.ToString("d")</dd>

                <dt class="col-sm-3">End Date</dt>
                <dd class="col-sm-9">@Model.ProductField.EndDate.ToString("d")</dd>

                <dt class="col-sm-3">Duration</dt>
                <dd class="col-sm-9">@((Model.ProductField.EndDate - Model.ProductField.StartDate).Days) days</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.ProductField.Status ? "bg-success" : "bg-danger")">
                        @(Model.ProductField.Status ? "Active" : "Inactive")
                    </span>
                </dd>

                <dt class="col-sm-3">Created Date</dt>
                <dd class="col-sm-9">@Model.ProductField.CreatedDate.ToString("g")</dd>

                <dt class="col-sm-3">Last Updated</dt>
                <dd class="col-sm-9">@Model.ProductField.UpdatedDate.ToString("g")</dd>
            </dl>

            <div class="d-flex justify-content-between mt-4">
                <a asp-page="./ListProductField" class="btn btn-secondary">Back to List</a>
                <div>
                    <a asp-page="./UpdateProductField" asp-route-id="@Model.ProductField.ProductFieldId" class="btn btn-primary me-2">Edit</a>
                    <a asp-page="./DeleteProductField" asp-route-id="@Model.ProductField.ProductFieldId" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div> 