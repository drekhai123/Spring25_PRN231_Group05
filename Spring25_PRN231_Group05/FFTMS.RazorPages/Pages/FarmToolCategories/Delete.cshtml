@page
@model FFTMS.RazorPages.Pages.FarmToolCategories.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}
<div class="main-container">
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">Delete Farm Tool Category</h5>
                    </div>
                    <div class="card-body">
                        <h4 class="text-danger">Are you sure you want to delete this?</h4>
                        <p class="text-muted">This action cannot be undone.</p>
                        <hr />

                        <dl class="row">
                            <dt class="col-sm-4 fw-bold">Category Name:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.FarmToolCategories.FarmToolCategoriesName)</dd>

                            <dt class="col-sm-4 fw-bold">Description:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.FarmToolCategories.FarmToolCategoriesDescription)</dd>

                            <dt class="col-sm-4 fw-bold">Status:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.FarmToolCategories.Status ? "bg-success" : "bg-danger")">
                                    @(Model.FarmToolCategories.Status ? "Active" : "Inactive")
                                </span>
                            </dd>                            
                            <dt class="col-sm-4 fw-bold">Created On:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.FarmToolCategories.CreateDate)</dd>

                            <dt class="col-sm-4 fw-bold">Last Updated:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.FarmToolCategories.UpdateDate)</dd>
                        </dl>

                        <form method="post">
                            <input type="hidden" asp-for="FarmToolCategories.FarmToolCategoriesId" />

                            <div class="d-flex justify-content-between">
                                <a asp-page="./Index" class="btn btn-secondary">
                                    <i class="dw dw-arrow-left"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="dw dw-delete-3"></i> Confirm Delete
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
