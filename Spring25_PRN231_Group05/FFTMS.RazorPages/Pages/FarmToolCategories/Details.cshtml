@page
@model FFTMS.RazorPages.Pages.FarmToolCategories.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";

}
<div class="main-container">
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Farm Tool Category Details</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless">
                            <tr>
                                <th class="text-muted" style="width: 30%;">@Html.DisplayNameFor(model => model.FarmToolCategories.FarmToolCategoriesName)</th>
                                <td>@Html.DisplayFor(model => model.FarmToolCategories.FarmToolCategoriesName)</td>
                            </tr>
                            <tr>
                                <th class="text-muted">@Html.DisplayNameFor(model => model.FarmToolCategories.FarmToolCategoriesDescription)</th>
                                <td>@Html.DisplayFor(model => model.FarmToolCategories.FarmToolCategoriesDescription)</td>
                            </tr>
                            <tr>
                                <th class="text-muted">@Html.DisplayNameFor(model => model.FarmToolCategories.Status)</th>
                                <td>
                                    <span class="badge @(Model.FarmToolCategories.Status ? "bg-success" : "bg-danger")">
                                        @(Model.FarmToolCategories.Status ? "Active" : "Inactive")
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th class="text-muted">@Html.DisplayNameFor(model => model.FarmToolCategories.CreateDate)</th>
                                <td>@Html.DisplayFor(model => model.FarmToolCategories.CreateDate)</td>
                            </tr>
                            <tr>
                                <th class="text-muted">@Html.DisplayNameFor(model => model.FarmToolCategories.UpdateDate)</th>
                                <td>@Html.DisplayFor(model => model.FarmToolCategories.UpdateDate)</td>
                            </tr>
                        </table>
                    </div>
                    <div class="card-footer text-end">
                        <a asp-page="./Edit" asp-route-id="@Model.FarmToolCategories.FarmToolCategoriesId" class="btn btn-warning">
                            <i class="dw dw-edit2"></i> Edit
                        </a>
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="dw dw-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
