@page
@model FFTMS.RazorPages.Pages.CategoryPages.UpdateCategoryModel
@{
    ViewData["Title"] = "Update Category";
    Layout = "_Layout";
}
<div class="main-container">
    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-white">
                <h3 class="mb-0">Edit Product</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Cate.CategoryId" />

                    <div class="mb-3">
                        <label asp-for="Cate.CategoryName" class="form-label fw-bold"></label>
                        <input asp-for="Cate.CategoryName" class="form-control" placeholder="Enter Category Name..." />
                        <span asp-validation-for="Cate.CategoryName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Cate.Description" class="form-label fw-bold"></label>
                        <textarea asp-for="Cate.Description" class="form-control" placeholder="Enter Description..." rows="3"></textarea>
                        <span asp-validation-for="Cate.Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Cate.CategoryImageUrl" class="form-label fw-bold"></label>
                        <input asp-for="Cate.CategoryImageUrl" class="form-control" placeholder="Enter Category Image..." />
                        <span asp-validation-for="Cate.CategoryImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="Cate.Status">
                        <label class="form-check-label fw-bold">@Html.DisplayNameFor(model => model.Cate.Status)</label>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-page="ListCategory" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</div>