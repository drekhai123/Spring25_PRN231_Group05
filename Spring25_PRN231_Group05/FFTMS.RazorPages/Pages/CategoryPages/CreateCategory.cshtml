@page
@model FFTMS.RazorPages.Pages.CategoryPages.CreateCategoryModel
@{
    ViewData["Title"] = "Create category";
    Layout = "_Layout";
}
<div class="main-container">
    <h1>Create</h1>

    <h4>Category</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Cate.CategoryName" class="control-label"></label>
                    <input asp-for="Cate.CategoryName" class="form-control" />
                    <span asp-validation-for="Cate.CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cate.Description" class="control-label"></label>
                    <input asp-for="Cate.Description" class="form-control" />
                    <span asp-validation-for="Cate.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cate.CategoryImageUrl" class="control-label"></label>
                    <input asp-for="Cate.CategoryImageUrl" class="form-control" />
                    <span asp-validation-for="Cate.CategoryImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="ListCategory">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>