@page
@model FFTMS.RazorPages.Pages.CategoryPages.DetailsCategoryModel
@{
    ViewData["Title"] = "Category Details";
    Layout = "_Layout";
}

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <!-- Page Header -->
            <div class="page-header">
                <div class="row align-items-center">
                    <div class="col-md-6 col-sm-12">
                        <h4 class="mb-0">Chi tiết danh mục</h4>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-page="ListCategory">Danh mục</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Lỗi!</strong> @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model.Category != null)
            {
                <!-- Category Details Card -->
                <div class="card-box mb-30">
                    <div class="pd-20">
                        <div class="row">
                            <div class="col-md-4">
                                @if (!string.IsNullOrEmpty(Model.Category.CategoryImageUrl))
                                {
                                    <img src="@Model.Category.CategoryImageUrl" alt="@Model.Category.CategoryName" 
                                         class="img-fluid rounded" style="max-width: 100%; height: auto;">
                                }
                                else
                                {
                                    <div class="text-center p-5 bg-light rounded">
                                        <i class="icon-copy dw dw-image" style="font-size: 48px;"></i>
                                        <p class="mt-2">Không có hình ảnh</p>
                                    </div>
                                }
                            </div>
                            <div class="col-md-8">
                                <h4 class="text-blue h4 mb-3">@Model.Category.CategoryName</h4>
                                <div class="mb-3">
                                    <h6 class="text-muted">Mô tả</h6>
                                    <p>@Model.Category.Description</p>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="text-muted">ID danh mục</h6>
                                        <p>@Model.Category.CategoryId</p>
                                    </div>
                                    <div class="col-md-6">
                                        <h6 class="text-muted">Ngày tạo</h6>
                                        <p>@Model.Category.CreateDate.ToString("dd/MM/yyyy")</p>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <h6 class="text-muted">Trạng thái</h6>
                                    <span class="badge @(Model.Category.Status ? "badge-success" : "badge-danger")">
                                        @(Model.Category.Status ? "Hoạt động" : "Không hoạt động")
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="pd-20 border-top">  
                        <div class="d-flex justify-content-between">
                            <a asp-page="ListCategory" class="btn btn-secondary">
                                <i class="icon-copy dw dw-back"></i> Quay lại danh sách
                            </a>
                            <div>
                                <a asp-page="UpdateCategory" asp-route-id="@Model.Category.CategoryId" class="btn btn-primary me-2">
                                    <i class="icon-copy dw dw-edit"></i> Sửa
                                </a>
                                <a asp-page="DeleteCategory" asp-route-id="@Model.Category.CategoryId" 
                                   class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này không?');">
                                    <i class="icon-copy dw dw-delete"></i> Xóa
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div> 