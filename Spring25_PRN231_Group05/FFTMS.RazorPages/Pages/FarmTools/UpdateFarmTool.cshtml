@page
@model FFTMS.RazorPages.Pages.FarmTools.UpdateFarmToolModel
@{
    ViewData["Title"] = "UpdateFarmTool";
    Layout = "_Layout";

}
<div class="main-container">
    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-white">
                <h3 class="mb-0">Chỉnh sửa dụng cụ</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="FarmTools.FarmToolsId" />

                    <div class="mb-3">
                        <label asp-for="FarmTools.FarmToolsName" class="form-label fw-bold"></label>
                        <input asp-for="FarmTools.FarmToolsName" class="form-control" placeholder="Enter tool name..." />
                        <span asp-validation-for="FarmTools.FarmToolsName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FarmTools.FarmToolsDetails" class="form-label fw-bold"></label>
                        <textarea asp-for="FarmTools.FarmToolsDetails" class="form-control" placeholder="Enter details..." rows="3"></textarea>
                        <span asp-validation-for="FarmTools.FarmToolsDetails" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FarmTools.FarmToolsQuantity" class="form-label fw-bold"></label>
                        <input asp-for="FarmTools.FarmToolsQuantity" type="number" class="form-control" placeholder="Enter quantity..." />
                        <span asp-validation-for="FarmTools.FarmToolsQuantity" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FarmTools.FarmToolsUnit" class="form-label fw-bold"></label>
                        <input asp-for="FarmTools.FarmToolsUnit" class="form-control" placeholder="Enter unit..." />
                        <span asp-validation-for="FarmTools.FarmToolsUnit" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="FarmTools.FarmToolCategoriesId" class="form-label fw-bold"></label>
                        <select asp-for="FarmTools.FarmToolCategoriesId" class="form-select" asp-items="@(ViewData["FarmToolCategoriesId"] as SelectList)">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="FarmTools.FarmToolCategoriesId" class="text-danger"></span>
                    </div>

                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="FarmTools.Status">
                        <label class="form-check-label fw-bold">@Html.DisplayNameFor(model => model.FarmTools.Status)</label>
                    </div>

                    <div class="form-check form-switch mt-2">
                        <input class="form-check-input" type="checkbox" asp-for="FarmTools.IsActive">
                        <label class="form-check-label fw-bold">@Html.DisplayNameFor(model => model.FarmTools.IsActive)</label>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FarmTools.CreateDate" class="form-label fw-bold"></label>
                        <input asp-for="FarmTools.CreateDate" type="datetime-local" class="form-control" />
                        <span asp-validation-for="FarmTools.CreateDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FarmTools.UpdateDate" class="form-label fw-bold"></label>
                        <input asp-for="FarmTools.UpdateDate" type="datetime-local" class="form-control" />
                        <span asp-validation-for="FarmTools.UpdateDate" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Về danh sách
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Lưu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</div>

