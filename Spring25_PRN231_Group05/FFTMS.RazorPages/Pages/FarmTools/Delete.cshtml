@page
@model PhamThaiDuy.NET1717.Spring25FE.Pages.FarmTools.DeleteModel

@{
    ViewData["Title"] = "Delete Farm Tool";
}
<div class="main-container">
    <div class="container mt-4">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Xác nhận xóa</h3>
            </div>
            <div class="card-body">
                <h5 class="text-danger">Bạn có chắc chắn muốn xóa công cụ trang trại này không?</h5>
                <dl class="row">
                    <dt class="col-sm-3">Tên:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FarmTool.FarmToolsName)</dd>

                    <dt class="col-sm-3">Mô tả:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FarmTool.FarmToolsDetails)</dd>

                    <dt class="col-sm-3">Số lượng:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FarmTool.FarmToolsQuantity) @Html.DisplayFor(model => model.FarmTool.FarmToolsUnit)</dd>

                    <dt class="col-sm-3">Trạng thái:</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model.FarmTool.Status ? "bg-success" : "bg-danger")">
                            @(Model.FarmTool.Status ? "Hoạt động" : "Không hoạt động")
                        </span>
                    </dd>

                    <dt class="col-sm-3">Hoạt động:</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model.FarmTool.IsActive ? "bg-success" : "bg-secondary")">
                            @(Model.FarmTool.IsActive ? "Có" : "Không")
                        </span>
                    </dd>

                    <dt class="col-sm-3">Tạo vào:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FarmTool.CreateDate)</dd>

                    <dt class="col-sm-3">Chỉnh sửa vào:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FarmTool.UpdateDate)</dd>

                    <dt class="col-sm-3">Loại dụng cụ:</dt>
                    <dd class="col-sm-9">
                        @if (Model.Category != null)
                        {
                            <span class="badge bg-info">@Model.Category.FarmToolCategoriesName</span>
                        }
                        else
                        {
                            <span class="text-muted">Không có loại dụng cụ</span>
                        }
                    </dd>
                </dl>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="FarmTool.FarmToolsId" />
                    <div class="d-flex justify-content-between">
                        <a asp-page="./ListFarmTools" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay về danh sách
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Xác nhận xóa
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>