@page
@model FFTMS.RazorPages.Pages.FarmTools.FarmToolDetailsModel
@{
    ViewData["Title"] = "Farm Tool Details";
    Layout = "_Layout";
}
<div class="main-container">
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Chi tiết dụng cụ</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Tên:</dt>
                <dd class="col-sm-9">@Model.FarmTool.FarmToolsName</dd>

                <dt class="col-sm-3 fw-bold">Mô tả:</dt>
                <dd class="col-sm-9">@Model.FarmTool.FarmToolsDetails</dd>

                <dt class="col-sm-3 fw-bold">Số lượng:</dt>
                <dd class="col-sm-9">@Model.FarmTool.FarmToolsQuantity @Model.FarmTool.FarmToolsUnit</dd>

                <dt class="col-sm-3 fw-bold">Loại dụng cụ:</dt>
                <dd class="col-sm-9">
                    @if (Model.Category != null)
                    {
                        <span class="badge bg-info">@Model.Category.FarmToolCategoriesName</span>
                    }
                    else
                    {
                        <span class="text-muted">Không có loại dụng cụ</span>
                    }
                </dd>

                <dt class="col-sm-3 fw-bold">Trạng thái:</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.FarmTool.Status ? "bg-success" : "bg-danger")">
                        @(Model.FarmTool.Status ? "Hoạt động" : "Không hoạt động")
                    </span>
                </dd>

                <dt class="col-sm-3 fw-bold">Còn hoạt động:</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.FarmTool.IsActive ? "bg-success" : "bg-secondary")">
                        @(Model.FarmTool.IsActive ? "Có" : "Không")
                    </span>
                </dd>

                <dt class="col-sm-3 fw-bold">Tạo vào:</dt>
                <dd class="col-sm-9">@Model.FarmTool.CreateDate.ToString("yyyy-MM-dd HH:mm")</dd>

                <dt class="col-sm-3 fw-bold">Chỉnh sửa lúc:</dt>
                <dd class="col-sm-9">@Model.FarmTool.UpdateDate.ToString("yyyy-MM-dd HH:mm")</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-page="./UpdateFarmTool" asp-route-id="@Model.FarmTool.FarmToolsId" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
                <a asp-page="./ListFarmTools" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
</div>
