@page
@model FFTMS.RazorPages.Pages.FarmTools.FarmToolDetailsModel
@{
    ViewData["Title"] = "Farm Tool Details";
    Layout = "_Layout";
}
<div class="main-container">
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Farm Tool Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Name:</dt>
                <dd class="col-sm-9">@Model.FarmTool.FarmToolsName</dd>

                <dt class="col-sm-3 fw-bold">Details:</dt>
                <dd class="col-sm-9">@Model.FarmTool.FarmToolsDetails</dd>

                <dt class="col-sm-3 fw-bold">Quantity:</dt>
                <dd class="col-sm-9">@Model.FarmTool.FarmToolsQuantity @Model.FarmTool.FarmToolsUnit</dd>

                <dt class="col-sm-3 fw-bold">Category:</dt>
                <dd class="col-sm-9">
                    @if (Model.Category != null)
                    {
                        <span class="badge bg-info">@Model.Category.FarmToolCategoriesName</span>
                    }
                    else
                    {
                        <span class="text-muted">No Category</span>
                    }
                </dd>

                <dt class="col-sm-3 fw-bold">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.FarmTool.Status ? "bg-success" : "bg-danger")">
                        @(Model.FarmTool.Status ? "Active" : "Inactive")
                    </span>
                </dd>

                <dt class="col-sm-3 fw-bold">Is Active:</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.FarmTool.IsActive ? "bg-success" : "bg-secondary")">
                        @(Model.FarmTool.IsActive ? "Yes" : "No")
                    </span>
                </dd>

                <dt class="col-sm-3 fw-bold">Created On:</dt>
                <dd class="col-sm-9">@Model.FarmTool.CreateDate.ToString("yyyy-MM-dd HH:mm")</dd>

                <dt class="col-sm-3 fw-bold">Last Updated:</dt>
                <dd class="col-sm-9">@Model.FarmTool.UpdateDate.ToString("yyyy-MM-dd HH:mm")</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-page="./UpdateFarmTool" asp-route-id="@Model.FarmTool.FarmToolsId" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
                <a asp-page="./ListFarmTools" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
</div>
