@page
@model FFTMS.RazorPages.Pages.FarmTools.FarmToolDetailsModel
@{
    ViewData["Title"] = "Farm Tool Details";
    Layout = "_Layout";
}
<h2>Farm Tool Details</h2>

@if (Model.FarmTool != null)
{
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <td>@Model.FarmTool.FarmToolsId</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.FarmTool.FarmToolsName</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>@Model.FarmTool.FarmToolCategoriesId</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Model.FarmTool.FarmToolsDetails</td>
        </tr>
        <tr>
            <th>Quantity</th>
            <td>@Model.FarmTool.FarmToolsQuantity @Model.FarmTool.FarmToolsUnit</td>
        </tr>
        <tr>
            <th>Quantity</th>
            <td>@Model.FarmTool.FarmToolsQuantity @Model.FarmTool.FarmToolsUnit</td>
        </tr>
        <tr>
            <th>Created Date</th>
            <td>@Model.FarmTool.CreateDate.ToString("dd-MM-yyyy")</td>
        </tr>
        <tr>
            <th>Updated Date</th>
            <td>@Model.FarmTool.UpdateDate.ToString("dd-MM-yyyy")</td>
        </tr>
    </table>
}
else
{
    <p class="text-danger">Farm tool not found.</p>
}

<a asp-page="ListFarmTools" class="btn btn-primary">Back to List</a>