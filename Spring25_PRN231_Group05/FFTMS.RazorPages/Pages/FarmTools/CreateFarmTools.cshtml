@page
@model FFTMS.RazorPages.Pages.FarmTools.CreateFarmToolsModel
@{
    ViewData["Title"] = "CreateFarmTools";
    Layout = "_Layout";

}
<div class="main-container">
    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h3 class="mb-0">Create New Farm Tool</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="FarmTools.FarmToolsName" class="form-label fw-bold"></label>
                        <input asp-for="FarmTools.FarmToolsName" class="form-control" placeholder="Enter tool name..." />
                        <span asp-validation-for="FarmTools.FarmToolsName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="FarmToolCategoriesId" class="form-label fw-bold">Farm Tool Category</label>
                        <select class="form-select" asp-for="FarmTools.FarmToolCategoriesId" required>
                            <option value="">-- Select a Category --</option>
                            @foreach (var category in Model.FarmToolCategoriesList)
                            {
                                <option value="@category.FarmToolCategoriesId">@category.FarmToolCategoriesName</option>
                            }
                        </select>
                        <span asp-validation-for="FarmTools.FarmToolCategoriesId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FarmTools.FarmToolsDetails" class="form-label fw-bold"></label>
                        <textarea asp-for="FarmTools.FarmToolsDetails" class="form-control" placeholder="Enter details..." rows="3"></textarea>
                        <span asp-validation-for="FarmTools.FarmToolsDetails" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="FarmTools.FarmToolsQuantity" class="form-label fw-bold"></label>
                            <input asp-for="FarmTools.FarmToolsQuantity" type="number" class="form-control" placeholder="Enter quantity..." />
                            <span asp-validation-for="FarmTools.FarmToolsQuantity" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="FarmTools.FarmToolsUnit" class="form-label fw-bold"></label>
                            <input asp-for="FarmTools.FarmToolsUnit" class="form-control" placeholder="Enter unit..." />
                            <span asp-validation-for="FarmTools.FarmToolsUnit" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-page="ListFarmTools" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>
