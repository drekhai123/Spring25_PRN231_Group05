@page
@model FFTMS.RazorPages.Pages.ProductPages.ProductDetailsModel
@{
    ViewData["Title"] = "Product Details";
    Layout = "_Layout";
}
<div class="main-container">
    <h2>Farm Tool Details</h2>

    @if (Model.Product != null)
    {
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <td>@Model.Product.ProductId</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Model.Product.ProductName</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>@Model.Product.Category.CategoryName</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>@Model.Product.Description</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>@Model.Product.Note</td>
            </tr>
            <tr>
                <th>Created Date</th>
                <td>@Model.Product.CreateDate.ToString("dd-MM-yyyy")</td>
            </tr>
            <tr>
                <th>Updated Date</th>
                <td>@Model.Product.UpdateDate.ToString("dd-MM-yyyy")</td>
            </tr>
        </table>
    }
    else
    {
        <p class="text-danger">Product not found.</p>
    }

    <a asp-page="ListProduct" class="btn btn-primary">Back to List</a>
</div>
