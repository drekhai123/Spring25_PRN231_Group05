@page
@model FFTMS.RazorPages.Pages.ProductPages.UpdateProductModel
@{
}
<div class="main-container">
    <h1>Create</h1>

    <h4>Farm Tools</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Product.ProductName" class="control-label">Product Name</label>
                    <input asp-for="Product.ProductName" class="form-control" />
                    <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Description" class="control-label">Description</label>
                    <input asp-for="Product.Description" class="form-control" />
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Note" class="control-label">Note</label>
                    <input asp-for="Product.Note" class="form-control" />
                    <span asp-validation-for="Product.Note" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.ProductImageUrl" class="control-label">Image</label>
                    <input asp-for="Product.ProductImageUrl" class="form-control" />
                    <span asp-validation-for="Product.ProductImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Product.Status" /> @Html.DisplayNameFor(model => model.Product.Status)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Product.CreateDate" class="control-label"></label>
                    <input asp-for="Product.CreateDate" class="form-control" />
                    <span asp-validation-for="Product.CreateDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.UpdateDate" class="control-label"></label>
                    <input asp-for="Product.UpdateDate" class="form-control" />
                    <span asp-validation-for="Product.UpdateDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="ListProduct">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>
