	<div class="left-side-bar">
		<div class="brand-logo">
			<a href="index.html">
				<img src="vendors/images/deskapp-logo.svg" alt="" class="dark-logo">
				<img src="vendors/images/deskapp-logo-white.svg" alt="" class="light-logo">
			</a>
			<div class="close-sidebar" data-toggle="left-sidebar-close">
				<i class="ion-close-round"></i>
			</div>
		</div>
		<div class="menu-block customscroll">
			<div class="sidebar-menu">
				<ul id="accordion-menu">
					<li>
						<a asp-page="/Index" class="dropdown-toggle no-arrow">
							<span class="micon bi bi-house"></span>
							<span class="mtext">Home</span>
						</a>
					</li>

					@using FFTMS.RazorPages.Helpers

					@{
						var role = JwtHelper.GetRoleFromToken(Context.Request.Cookies["AuthToken"]);
					}

					@if (role == "Admin")
					{
						<li>
							<a asp-page="/Users/Index" class="dropdown-toggle no-arrow">
								<span class="micon dw dw-user-2"></span>
								<span class="mtext">User Management</span>
							</a>
						</li>
					}

					@if (role == "Manager")
					{
						<li>
							<a asp-page="/Tasks/Index" class="dropdown-toggle no-arrow">
								<span class="micon bi bi-list-task"></span>
								<span class="mtext">Tasks Management</span>
							</a>
						</li>
						<li>
							<a asp-page="/Products/Index" class="dropdown-toggle no-arrow">
								<span class="micon bi bi-box"></span>
								<span class="mtext">Product Management</span>
							</a>
						</li>
					}
					else if (role == "Staff")
					{
						<li>
							<a asp-page="/UserTasks/Index" class="dropdown-toggle no-arrow">
								<span class="micon bi bi-list-check"></span>
								<span class="mtext">My Tasks</span>
							</a>
						</li>
					}

					<li>
						<a asp-page="/FarmToolCategories/Index" class="dropdown-toggle no-arrow">
							<span class="micon dw dw-clipboard"></span>
							<span class="mtext">FarmToolCategories Management</span>
						</a>
					</li>
					<li>
						<a asp-page="/FarmTools/ListFarmTools" class="dropdown-toggle no-arrow">
							<span class="micon dw dw-clipboard"></span>
							<span class="mtext">FarmTools Management</span>
						</a>
					</li>
					<li>
						<div class="dropdown-divider"></div>
					</li>

					<li>
						<div class="sidebar-small-cap">Extra</div>
					</li>
					<li class="dropdown">
						<a href="javascript:;" class="dropdown-toggle">
							<span class="micon bi bi-command"></span>
							<span class="mtext">EXTRA</span>
						</a>
						<ul class="submenu">
